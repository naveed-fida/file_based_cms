<form action="/<%= @file_name %>" method="post">
  <label for="text">Edit contents of <%= @file_name %></label>

  <textarea name="edit_text" id="text" cols="30" rows="10">
    <%= @file_contents %>
  </textarea>
  <input class="submit-button" type="submit" name="submit" value="Save Changes">
</form>

<% content_for :page_title do %>
  <title>Simple CMS - Edit <%= @file_name %></title>
<% end %>